<div class="text-center">
  <h1>新規登録</h1>
</div>

<div class="row">
  <div class="col-sm-4 offset-sm-4">

    <%= form_with(model: @user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="mb-3">
        <%= f.label :name, '名前' %>
        <%= f.email_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      
      <div class="mb-3">
        <%= f.label :password_confirmation, '確認用メールアドレス' %>
        <%= f.email_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '新規登録', class: 'btn btn-dark w-100' %>
    <% end %>

    <p>アカウントをお持ちですか？ <%= link_to 'ログインする', signup_path %></p>
  </div>
</div>