<h1><%= @book.title %> 感想ページ</h1>

<table class="table table-bordered border-dark">
  <tr>
    <th>タイトル</th>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <th>感想</th>
    <td><%= @book.review %></td>
  </tr>
</table>

<%= link_to '編集する', edit_book_path(@book), class: 'btn btn-dark' %>
<%= link_to '削除する', @book, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>