<h1><%= current_user.name %>の本棚</h1>


<% if @books.any? %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>感想</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title.truncate(30), book %></td>
              <td><%= book.review.truncate(30) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<%= link_to '本を登録する', new_book_path, class: "btn btn-dark" %>