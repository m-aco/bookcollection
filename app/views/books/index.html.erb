<h1>本一覧</h1>


<% if @books.any? %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.review %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to '本を登録する', new_book_path, class: "btn btn-dark" %>